{
  "name": "personal-site",
  "version": "3.0.0",
  "private": false,
  "description": "Personal website of Dimitris Trechas, a Software Engineer from Greece.",
  "author": {
    "name": "Dimitris Trechas <dimitristrechas@gmail.com> (https://www.dimitristrechas.com)"
  },
  "homepage": "https://dimitristrechas.com",
  "license": "MIT",
  "scripts": {
    "dev": "next dev --turbopack -p 3001",
    "build": "next build",
    "start": "next start",
    "outdated": "npx npm-check-updates",
    "lint": "biome check . && eslint .",
    "lint:fix": "biome check --write . && eslint --fix .",
    "biome:check": "biome check .",
    "biome:check:fix": "biome check --write .",
    "biome:format": "biome format --write .",
    "biome:format:fix": "biome format .",
    "biome:lint": "biome lint --write .",
    "biome:lint:fix": "biome lint .",
    "biome:ci": "biome ci .",
    "postinstall": "git rev-parse --git-dir > /dev/null 2>&1 && lefthook install || true"
  },
  "dependencies": {
    "@tryghost/content-api": "^1.12.3",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "node-html-parser": "^7.0.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^25.2.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.6",
    "lefthook": "^2.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
